<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
  <div class="row">
    <div class="col-md-6 px-0">
      <h1 class="display-4 fst-italic"><a href="{{ path('entity.node.canonical', {'node': article.id}) }}">{{ article.title.value }}</a></h1>
      <p class="lead my-3">{{ drupal_field('field_article_body', 'node', article.id, 'teaser') }}</p>
      <p class="lead mb-0"><a href="{{ path('entity.node.canonical', {'node': article.id}) }}" class="text-white fw-bold">{{ 'Lire la suite...' }}</a></p>
    </div>
    <div class="col-md-6 d-flex justify-content-center">
      {% set image_uri = article.field_image|file_uri %}
      <img src="{{ image_uri|image_style('large') }}" alt="{{ article.title.value }}" class="h-100">
    </div>
  </div>
</div>
